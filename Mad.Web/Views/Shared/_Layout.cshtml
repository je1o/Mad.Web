            //    html += temp.replace(/\{height\}/g, 200).replace(/\{width\}/g, w);
            //}
            //$(name).html(html);

            var total = 0;
            var count = 0;
            var max = 0;
            $('.brick').each(function (index, item) {       
                var c = size;
                var h = parseInt($(item).children('a').attr("data-height"));
                var w = parseInt($(item).children('a').attr("data-width"));
                if (h > w) {
                    var v = w / (h / c);
                    $(item).height(c).width(v);
                    total += v;
                    if (v > max)
                        max = v;
                }
                else {
                    $(item).height(h / (w / c)).width(c);
                    total += c;
                }
                count++;
            });

            $(function () {
                var wall = new Freewall(name);
                wall.reset({
                    selector: '.brick',
                    animate: false,
                    cellW: size, //total / count,
                    cellH: 'auto',
                    onResize: function () {
                        wall.fitWidth();
                        //wall.fitHeight();
                    }
                });

                $(".brick img").one("load", function () {
                    wall.fitWidth();
                    //wall.fitHeight();    
                }).each(function () {
                    if (this.complete) $(this).load();
                    });
            });

            //wall.fitWidth();
            // for scroll bar appear;
            //$(window).trigger("resize");
        }       

        $(document).ready(function () {
