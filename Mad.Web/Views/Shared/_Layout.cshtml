    <script>
        function freewallize(name, size) {
           // var temp = "<div class='cell' style='width:{width}px; height: {height}px; border: black solid 1px'></div>";
            //var w = 1, html = '', limitItem = 9;
            //for (var i = 0; i < limitItem; ++i) {
